;; ions.mdp

; Run setup
integrator               = steep      
emtol                    = 1000
emstep                  = 0.01
nsteps                   = 2000

; Neighbor search
cutoff-scheme            = Verlet
pbc                      = xyz

; Electrostatics and vdw
coulombtype              = PME
pme-order                = 4
fourierspacing           = 0.1
rcoulomb                 = 1.2
rvdw                     = 1.2

